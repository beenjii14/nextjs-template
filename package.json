{
  "name": "nextjs-template",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Benjamin Cruz <benjamin_cruz@Outlook.es>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beenjii14/nextjs-template.git"
  },
  "scripts": {
    "dev": "NODE_ENV=development next dev",
    "build": "next build",
    "start": "NODE_ENV=production next start",
    "production:start": "npm run build && npm run start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx && stylelint \"**/*.scss\"",
    "test": "NODE_ENV=test jest --coverage --no-cache --detectOpenHandles --runInBand --silent",
    "test:s": "jest --updateSnapshot",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci",
    "prettier": "prettier --write .",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "12.1.6",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "sass": "1.52.3",
    "winston": "3.8.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.3.0",
    "@types/node": "17.0.41",
    "@types/react": "18.0.12",
    "@types/react-dom": "18.0.5",
    "@typescript-eslint/eslint-plugin": "5.27.1",
    "@typescript-eslint/parser": "5.27.1",
    "babel-jest": "28.1.1",
    "eslint": "8.17.0",
    "eslint-config-next": "12.1.6",
    "eslint-config-standard-with-typescript": "19.0.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-react": "7.30.0",
    "eslint-plugin-standard": "5.0.0",
    "husky": "8.0.1",
    "identity-obj-proxy": "3.0.0",
    "jest": "28.1.1",
    "jest-environment-jsdom": "28.1.1",
    "prettier": "2.6.2",
    "react-test-renderer": "18.1.0",
    "stylelint": "14.9.0",
    "stylelint-config-prettier-scss": "0.0.1",
    "stylelint-config-standard-scss": "4.0.0",
    "ts-jest": "28.0.4",
    "typescript": "4.7.3"
  }
}
