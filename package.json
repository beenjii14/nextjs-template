{
  "name": "nextjs-template",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Benjamin Cruz <benjamin_cruz@Outlook.es>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beenjii14/nextjs-template.git"
  },
  "scripts": {
    "dev": "NODE_ENV=development next dev",
    "build": "next build",
    "start": "NODE_ENV=production next start",
    "production:start": "npm run build && npm run start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx && stylelint \"**/*.scss\"",
    "test": "NODE_ENV=test jest --coverage --no-cache --detectOpenHandles --runInBand --silent",
    "test:s": "jest --updateSnapshot",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci",
    "prettier": "prettier --write .",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "12.1.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sass": "1.56.0",
    "winston": "3.8.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@types/node": "18.11.9",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.8",
    "@typescript-eslint/eslint-plugin": "5.42.0",
    "@typescript-eslint/parser": "5.42.0",
    "babel-jest": "29.2.2",
    "eslint": "8.26.0",
    "eslint-config-next": "13.0.2",
    "eslint-config-standard-with-typescript": "23.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.31.10",
    "eslint-plugin-standard": "5.0.0",
    "husky": "8.0.1",
    "identity-obj-proxy": "3.0.0",
    "jest": "29.2.2",
    "jest-environment-jsdom": "29.2.2",
    "prettier": "2.7.1",
    "react-test-renderer": "18.2.0",
    "stylelint": "14.14.1",
    "stylelint-config-prettier-scss": "0.0.1",
    "stylelint-config-standard-scss": "6.1.0",
    "ts-jest": "29.0.3",
    "typescript": "4.8.4"
  }
}
